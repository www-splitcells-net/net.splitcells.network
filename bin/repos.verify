set -e
# The exit code 255 is used, in order to signal xargs, that a real error occurred.
../net.splitcells.network.hub/bin/net.splitcells.osi.repos.peers | xargs -i sh -c 'set -e && cd ../{} && echo Verifying the data integrity of repo: $(pwd) && repo.verify || exit 255'
../net.splitcells.network.hub/bin/net.splitcells.osi.repos.peers | xargs -i sh -c 'set -e && cd ../{} && echo Checking the license info of repo: $(pwd) && license.check || exit 255'